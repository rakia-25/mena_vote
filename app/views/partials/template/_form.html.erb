  <% send("#{resource_name}_forms").each do |column, value| %>
    <div class="field">
      <div class="control columns">
        <div class="column is-3">
          <%= f.label value[:title], class: '' %>
        </div>
        <div class="column is-9">
          <%= render "partials/template/fields/#{value[:field]}", value: value, name: column, f: f, resource: resource %>
          <%= form_field_error_helper(resource, value[:field] == 'model' ? value[:model_name] : column) %>
        </div>
      </div>
    </div>
  <% end %>
